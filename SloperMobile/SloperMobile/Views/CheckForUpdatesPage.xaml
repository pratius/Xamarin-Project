<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SloperMobile.Views.CheckForUpdatesPage" Style="{StaticResource AppBackgroundColor}">
  <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <Grid.RowDefinitions>
      <RowDefinition Height="10"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="20"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="20"></ColumnDefinition>
    </Grid.ColumnDefinitions>
  </Grid>
  <Label x:Name="txtUpdate" Text="Checking for updates..." VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Grid.Row="0" Style="{StaticResource GeneralLabelStyle}" />
  <ActivityIndicator x:Name="progressbar" Grid.Column="1" Grid.Row="0" IsEnabled="True"  WidthRequest="30" HeightRequest="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  Color="White" ></ActivityIndicator>
</ContentPage>